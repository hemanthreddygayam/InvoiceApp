@model InvoiceApplication.Models.InvoiceViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Invoice Details</h2>
<div class="col-sm-12">
<div class=" col-sm-offset-3 col-sm-6">
    <table id="info" class="table table-striped" style="text-align:center;">
        <tr id="element" class="table-info" style="display:none">
            <td>Invoice Id:</td>
            <td>@Html.Encode(Model.invoiceId.ToString())</td>
        </tr>
        <tr class="table-info">
            <td>Invoice No:</td>
            <td>@Html.Encode(Model.invoiceNumber.ToString())</td>
        </tr>
        <tr class="table-info">
            <td>Customer Name:</td>
            <td>@Html.Encode(Model.CustomerName)</td>
        </tr>
        <tr class="table-info">
            <td>Due Date</td>
            <td>@Html.Encode(Model.AccountDate.Date.ToString())</td>
        </tr>
        <tr class="table-info">
            <td>Delivary Date:</td>
            <td>@Html.Encode(Model.DelivaryDate.ToString())</td>
        </tr>

        <tr class="table-info">
            <td>Total Amount:</td>
            <td>@Html.Encode(Model.Amount.ToString())</td>
        </tr>

        <tr class="table-info">
            <td>Exchange Currency:</td>
            <td>@Html.Encode(Model.currencyCode)</td>
        </tr>
        <tr class="table-info">
            <td>Exchange Rate:</td>
            <td>@Html.Encode(Model.exchangeRate.ToString())</td>
        </tr>
        <tr class="table-info">
            <td>Total Local Amount:</td>
            <td>@Html.Encode(Model.totalLocalAmount.ToString())</td>
        </tr>
    </table>
</div>
</div>
<div id="buttuonsdiv" class="row col-sm-offset-5" style="margin-right:1px">
    <button type="button" id="approveCat2" class="btn btn-success" style="@(Model.showbuttons ? "display:inline" : "display:none")">Approve</button>
    <button type="button" id="declineCat2" class="btn btn-danger" style="@(Model.showbuttons ? "display:inline" : "display:none")">Revert</button>
    <button type="button" id="warningCat2" class="btn btn-warning" style="@(Model.showbuttons ? "display:inline" : "display:none")">Hold</button>
    <a asp-controller="Invoices"
       asp-action="Index"
       asp-route-id="@Model.invoiceId"
       class="btn btn-warning">
        View Details
    </a>

</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/Approval.js"></script>
